bill = float(input("Input cost here"))
tip = (input("Input if service was bad, okay, good or great here"))
percent = [0,15,20,25]
z = 1
a = 2
b = 3
def totalcost():
    if tip == ("bad"):
        tip = list(0)
    elif tip == ("okay"):
        tip = list(1)
    if tip == ("good"):
        tip = list(2)
    elif tip == ("great"):
        tip = list(3)
    else:
        print("invalid input")
    z = float(bill * 0.01)
    a = float(z * tip)
    b = int(bill + a)
    print(b)
totalcost()

